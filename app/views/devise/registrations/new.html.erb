<div class="row">
  <div class="col-sm-4"></div>
  <div class="col-sm-4">
    <h2>Sign up</h2>
    <br />
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
      </div>
      <br />
      <div class="field">
        <%= f.email_field :email, placeholder: "Email", class: "form-control", autofocus: true %>
      </div>
      <br />

      <div class="field">
        <%= f.password_field :password, placeholder: "Password (8 characters minimum) ", class: "form-control", autocomplete: "off" %>
      </div>
      <br />

      <div class="field">
        <%= f.password_field :password_confirmation, placeholder:"Password confirmation", class: "form-control", autocomplete: "off" %>
      </div>

      <br />
      <div class="actions">
        <%= f.submit "Create", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <br />
    <%= render "devise/shared/links" %>
  </div>
  <div class="col-sm-4"></div>
</div>
